<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srimanth.tictactoe.MainActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ttt1"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/hSpacing"
            android:layout_marginLeft="@dimen/hSpacing"
            android:layout_marginRight="@dimen/hSpacing"
            android:layout_marginTop="@dimen/spacing"
            android:layout_row="0"
            android:onClick="dropIn"
            android:tag="0"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="1"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="@dimen/spacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="2"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/hSpacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="3"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="4"/>
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="5"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/hSpacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="6"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="7"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:onClick="dropIn"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="@dimen/hSpacing"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginStart="@dimen/spacing"
            android:layout_marginEnd="@dimen/spacing"
            android:tag="8"/>




    </GridLayout>

    <LinearLayout
        android:id="@+id/askBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#8aa382"
        android:alpha="0">

        <TextView
            android:id="@+id/winnerMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playAgain"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing"
            android:onClick="playAgain"/>
    </LinearLayout>

</RelativeLayout>
