<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srimanth.hikerswatch.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/stars"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/appTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/latTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/latitude"
        android:textColor="#ffffff"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/longTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/latTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/longitude"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/accTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/longTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/acc"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/altTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/accTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/alt"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/addTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/altTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/add"
        android:textColor="#ffffff"
        android:textSize="30sp" />


</RelativeLayout>
